from random import random


print("*********************************")
print("Bem vindo ao jogo de Adivinhação!")
print("*********************************")

numero_secreto = 42

chute = input('Digite um numero:')
print('Você chutou:', chute)
chute = int(chute)

if (chute == numero_secreto):
    print('Você acertou!!!')
else:
    print('Você errou.')

print('Fim do jogo')
